#!/usr/bin/env sh

battery=/sys/class/power_supply/BAT0

capacity=$(cat "$battery"/capacity) || exit
status=$(cat "$battery"/status)

if [ "$capacity" -ge 75 ]; then
	color="#00ff00"
elif [ "$capacity" -ge 50 ]; then
	color="#ffffff"
elif [ "$capacity" -ge 25 ]; then
	color="#ffff00"
else
	color="#ff0000"
	warn="â—"
	[ "$status" = "Discharging" ] && [ "$capacity" -le 10 ] && dunstify -a "Battery" "ï‰ƒ Low Battery\n Plugin Charger"
fi

[ -z $warn ] && warn=" "

[ "$status" = "Charging" ] && color="#ffffff"

printf "%s%s%s\n" "$(echo "$status" | sed "s/,//;s/Discharging/ğŸ”‹/;s/Not charging/ğŸ›‘/;s/Charging/ğŸ”Œ/;s/Unknown/â™»ï¸/;s/Full/âš¡/;s/ 0*/ /g;s/ :/ /g")" "$warn" "$(echo "$capacity" | sed -e 's/$/%/')"
