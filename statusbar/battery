#!/usr/bin/env sh

battery=/sys/class/power_supply/BAT0

capacity=$(cat "$battery"/capacity) || exit
status=$(cat "$battery"/status)

if [ "$capacity" -ge 75 ]; then
	color="#00ff00"
	bat="ï‰€"
elif [ "$capacity" -ge 50 ]; then
	color="#ffffff"
	bat="ï‰"
elif [ "$capacity" -ge 25 ]; then
	color="#ffff00"
	bat="ï‰‚"
else
	color="#ff0000"
	warn="â—"
	bat="ï‰ƒ"
	[ "$status" = "Discharging" ] && dunstify -a "Battery" "ï‰ƒ Low Battery\n Plugin Charger"
fi

[ -z $warn ] && warn=" "

[ "$status" = "Charging" ] && color="#ffffff"

printf "<span color='%s'>%s%s</span>%s\n" "$color" "$(echo "$status" | sed "s/,//;s/Discharging/$bat/;s/Not charging/ğŸ›‘/;s/Charging/ğŸ”Œ/;s/Unknown/â™»ï¸/;s/Full/âš¡/;s/ 0*/ /g;s/ :/ /g")" "$warn" "$(echo "$capacity" | sed -e 's/$/%/')"
